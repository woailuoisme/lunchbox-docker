server {
    listen 80;
    server_name example.com;

    # 网站主目录
    root /usr/share/nginx/html;
    index index.html;

    # 核心配置：将错误转发到 error-pages 容器
    error_page 400 401 403 404 405 408 410 411 412 413 414 415 429 500 501 502 503 504 505 /error.html;

    # 反向代理到 error-pages 服务
    location = /error.html {
        # 禁止直接访问该路径
        internal;

        # 传递原始错误码给 error-pages 服务
        proxy_set_header X-Original-Status-Code $status;

        # 代理到 error-pages 容器(容器名:端口)
        proxy_pass http://error-pages:8080;

        # 其他必要的代理头
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # 示例：反向代理后端服务时的错误处理
    location /api {
        proxy_pass http://backend-service:3000;  # 替换为你的后端服务
        proxy_intercept_errors on;  # 允许Nginx捕获后端返回的错误
        error_page 502 503 /error.html;  # 后端错误转发到自定义页面
    }
}
