# Example Secrets File
# DO NOT commit this file to version control
# Copy to secrets.env and fill in actual values for each environment

# PostgreSQL Database Secrets
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis Secrets
REDIS_PASSWORD=your-secure-redis-password

# RabbitMQ Secrets
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=your-secure-rabbitmq-password
RABBITMQ_ERLANG_COOKIE=your-secure-erlang-cookie

# MinIO Secrets
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your-secure-minio-password

# PgBouncer Database URL
PGBOUNCER_DATABASE_URL=postgres://postgres:your-secure-postgres-password@postgres:5432/lunchbox

# Application Secrets (if needed)
APP_KEY=base64:your-application-key
APP_SECRET=your-application-secret

# External Service Secrets (if applicable)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
SMTP_PASSWORD=your-smtp-password

# SSL Certificate Secrets (for production)
# These should be created from actual certificate files
# kubectl create secret tls nginx-ssl --cert=tls.crt --key=tls.key -n lunchbox-prod
